<% layout('layouts/boilerplate') %>


    <div class="container d-flex justify-content-center align-items-center mt-n5 mb-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" novalidate class=validated-form>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required
                                    autofocus />
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required />
                            </div>


                            <div class="mb-3">
                                <button class="btn btn-success w-100">Sign In</button>
                            </div>
                            <div class="mb-3">
                                <a href="/campgrounds" class="btn btn-danger w-100">Back to Campgrounds</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>

    </div>